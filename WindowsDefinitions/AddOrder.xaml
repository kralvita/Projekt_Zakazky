<Window x:Class="Zakázky.WindowsDefinitions.AddOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zakázky.WindowsDefinitions"
        mc:Ignorable="d"
        Title="AddOrder" Height="800" Width="800">
    <Grid>
        <StackPanel>
            <Menu Height="20">
                <MenuItem Header="Uložit" Click="SaveOrder"/>
                <MenuItem Header="Zavřít" Click="Close"/>
                <ComboBox  Name="Stav" Width="80" ItemsSource="{Binding OderState}"/>
            </Menu>
        </StackPanel>
        <GroupBox Header="Hlavička" Margin="10,28,10,538">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Row 1 -->
                    <RowDefinition Height="Auto" />
                    <!-- Row 2 -->
                    <RowDefinition Height="Auto" />
                    <!-- Row 3 -->
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                 <!-- Row 1: Date, Customer, Order Type -->
                <TextBlock Text="Date:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center" />
                <DatePicker x:Name="DatePicker" Grid.Row="0" Grid.Column="1" Margin="5" Height="25"/>

                <TextBlock Text="Odběratel:" Grid.Row="0" Grid.Column="2" Margin="5" VerticalAlignment="Center" />
                <TextBox x:Name="CustomerTextBox" Grid.Row="0" Grid.Column="3" Margin="5" Height="25"/>

                <TextBlock Text="Typ:" Grid.Row="0" Grid.Column="4" Margin="5" VerticalAlignment="Center" />
                <ComboBox x:Name="OrderTypeComboBox" Grid.Row="0" Grid.Column="5" Margin="5" Height="25">
                    <ComboBoxItem Content="Standard" />
                     <ComboBoxItem Content="Express" />
                 </ComboBox>

                 <!-- Row 2: Order Name, Order Note -->
                <TextBlock Text="Název zakázky:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center" />
                <TextBox x:Name="OrderNameTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" Height="25"/>

                <TextBlock Text="Poznámka:" Grid.Row="1" Grid.Column="3" Margin="5" VerticalAlignment="Center" />
                <TextBox x:Name="OrderNoteTextBox" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Margin="5" Height="25"/>

                <!-- Row 3: Order Description -->
                <TextBlock Text="Popis:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Top" />
                <TextBox x:Name="OrderDescriptionTextBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" Margin="5" Height="100" TextWrapping="Wrap" AcceptsReturn="True" />
            </Grid>

        </GroupBox>

        <GroupBox Header="Položky" Margin="10,253,10,229">
            <DataGrid x:Name="DataSubjectGrid" MinHeight="100" MaxHeight="380"  CanUserAddRows="True" AutoGenerateColumns="false" RowEditEnding="MyDataGrid_RowEditEnding"> IsReadOnly="False" MouseRightButtonUp="ClickMouseRightAction" Height="304">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Název" Binding="{Binding OrderItemName}" Width="380"/>
                    <DataGridTextColumn Header="Poznáma" Binding="{Binding SubjectName}" Width="300"/>
                    <DataGridTextColumn Header="Množství" Binding="{Binding ICO}" Width="80"/>
                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Nový" Click="NewOrderItem"/>
                        <MenuItem Header="Vymazat" Click="DeleteOrderItem"/>
                    </ContextMenu>    
                </DataGrid.ContextMenu>
            </DataGrid>

        </GroupBox>

        <GroupBox Header="Patička" Margin="10,560,10,146" >
            <Grid Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <!-- Row 1 -->
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Row 1: Employee -->
                <TextBlock Text="Převzal:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center" />
                <TextBox x:Name="EmployeeTextBox" Grid.Row="0" Grid.Column="1" Margin="5" Height="25"/>

                <!-- Row 1: Estimated Cost -->
                <TextBlock Text="Odhadovaná cena:" Grid.Row="0" Grid.Column="2" Margin="5" VerticalAlignment="Center" />
                <TextBox x:Name="EstimatedCostTextBox" Grid.Row="0" Grid.Column="3" Margin="5"  Height="25"/>

                <!-- Row 1: Total Cost -->
                <TextBlock Text="Konečná cena:" Grid.Row="0" Grid.Column="4" Margin="5" VerticalAlignment="Center" />
                <TextBox x:Name="TotalCostTextBox" Grid.Row="0" Grid.Column="5" Margin="5" Height="25"/>
            </Grid>

        </GroupBox>
        
    </Grid>
</Window>
