<Window x:Class="Zakázky.WindowsDefinitions.AddSubject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zakázky.WindowsDefinitions"
        mc:Ignorable="d"
        Title="Nový subjeckt" Height="450" Width="600">
    <Grid>
        <StackPanel>
            <Menu>
                <MenuItem Header="Uložit" Click="Save"/>
                <MenuItem Header="Zavřít" Click="Close"/>
            </Menu>
        </StackPanel>
        <Label Content="Název subjektu:" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SName" HorizontalAlignment="Left" Margin="98,25,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="450" />
        <Label Content="Zkratka:" HorizontalAlignment="Left" Margin="380,45,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.49,0.497"/>
        <TextBox Name="zkratka" HorizontalAlignment="Left" Margin="428,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="IČO:" HorizontalAlignment="Left" Margin="61,45,0,0" VerticalAlignment="Top"/>
        <Label Content="DIČ:" HorizontalAlignment="Left" Margin="223,45,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ico_num" HorizontalAlignment="Left" Margin="98,50,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Name="dic" HorizontalAlignment="Left" Margin="255,50,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Adresa:" HorizontalAlignment="Left" Margin="44,70,0,0" VerticalAlignment="Top"/>
        <TextBox Name="Adress" HorizontalAlignment="Left" Margin="98,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="277"/>
        <TextBox Name="City" HorizontalAlignment="Left" Margin="98,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="277"/>
        <Label Content="Město:" HorizontalAlignment="Left" Margin="48,97,0,0" VerticalAlignment="Top"/>

    </Grid>

</Window>
